<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  </head>
  <body  style="padding: 5%;>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

<%= form_with(model: user) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field" style="padding-top: 5%">
    <%= form.text_field :name, :required => true , placeholder:"Name", class: "form-control",:style=> 'max-width: 33%;min-width: 330px;' %>
    <br>
    <br>
    <%= form.text_field :phoneNumber, :required => true, placeholder:"Phone Number", class: "form-control",:style=> 'max-width: 33%;min-width: 330px;'   %>
    <br>
    <br>
    <%= form.text_field :email, :size => "10", :required => true, placeholder:"Email", class: "form-control", :style=> 'max-width: 33%;min-width: 330px;'   %>
    <br>
    <br>
    <%= cur_date = "" %>
    <% User.list_days_and_times.each do |date_time| %>
      <% new_date = date_time.split(/,/)[0] %>
      <% if new_date != cur_date %>
        <% day_of_week = DateTime.parse(new_date).to_date.strftime("%A").to_str.capitalize() %>
        <br>
        <%= form.label "Interview Date: " + day_of_week + ", "+ new_date %>
        <br>
        <% cur_date = new_date %>
      <% end %>
      <%= form.radio_button :interviewDateTime, [date_time] %> <%= date_time.split(/,/)[1] %><br>
    <% end %>
  </div>

  <center>
  <div class="actions">
    <%= form.submit "Submit", class: "btn btn-primary" %>
  </div>
  </center>
<% end %>


</body>